{
  "typescript.tsserver.useSyntaxServer": "auto",
  "typescript.tsserver.maxTsServerMemory": 8192,
  "github.copilot.advanced": {
    "indentationMode": true,
    "useLanguageServer": true
  },
  "github.copilot.enable": {
    "typescript": true,
    "typescriptreact": true,
    "json": true,
    "yaml": true
  },
  "github.copilot.chat.codeGeneration.useInstructionFiles": true,
  "github.copilot.chat.reviewSelection.enabled": true,
  "github.copilot.editor.enableAutoCompletions": true,
  "github.copilot.chat.edits.codesearch.enabled": true,
  "github.copilot.editor.enableCodeActions": true,
  "github.copilot.chat.editor.temporalContext.enabled": true,
  "github.copilot.chat.copilotDebugCommand.enabled": true,
  "github.copilot.chat.search.semanticTextResults": true,
  "chat.agent.maxRequests": 150,
  "github.copilot.nextEditSuggestions.enabled": true,
  "notebook.experimental.generate": true,
  "github.copilot.chat.followUps": "always",
  "workbench.commandPalette.experimental.askChatLocation": "quickChat",
  "chat.commandCenter.enabled": true,
  "github.copilot.chat.setupTests.enabled": true,
  "editor.formatOnSave": true,
  "editor.inlineSuggest.edits.codeShifting": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always",
    "source.organizeImports": "always"
  },
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js,${capture}.d.ts,${capture}.test.ts",
    "*.tsx": "${capture}.css,${capture}.test.tsx,${capture}.stories.tsx",
    "package.json": "package-lock.json,yarn.lock,bun.lockb",
    "tsconfig.json": "tsconfig.*.json"
  },
  "editor.inlineSuggest.enabled": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.semanticHighlighting.enabled": true,
  "editor.guides.bracketPairs": true,
  "json.format.enable": false,
  "editor.suggest.preview": true,
  "editor.suggest.showStatusBar": true,
  "typescript.inlayHints.parameterNames.enabled": "all",
  "typescript.preferences.importModuleSpecifier": "shortest",
  "terminal.integrated.gpuAcceleration": "on"
}
